extends base
block content 
 .page-header.default-template-gradient
  .container
    .row
      .col-md-12
        h2.page-title Your Booking
 if mybooking
  .availability-area.two(style='padding: 0;background-color: white;')
   span#userhsmarking(style='width:0;height:0;opacity:0')= mybooking._id
   span#usermark(style='width:0;height:0;opacity:0')= user._id
   .container
    .row
      .col-md-12
        div
          h2.booking-name(style='font-family: Poppins;')
            = house.houseName
          .booking-date
            h3.booking-date-info(style='text-align: left;font-family: Poppins; font-weight: 600; ')
              svg.bi.bi-calendar-week-fill(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                path(d='M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4V.5zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2zM9.5 7h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm3 0h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zM2 10.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3.5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5z')
              |                              Booked on
              br
              - let date = mybooking.date; let options = {   weekday: 'long', month: 'long', day: 'numeric'  }; let formatedDate = new Intl.DateTimeFormat("en-US",options).format(date)
              = formatedDate
            a#refundBtn.button.nevy-button.button-radius.default-template-gradient(href='#') Request refund
            a#deleteHouseBtn.button.nevy-button.button-radius(href='#' style ='background-color:red' ) Unbook This House!!
        .col-md-12
          .heading-content-three
            h2.page-title(style='font-weight: 500;font-family: Poppins;color: #7ed56f;')
              svg.bi.bi-credit-card-2-front-fill(xmlns='http://www.w3.org/2000/svg' width='22' height='22' fill='currentColor' viewbox='0 0 16 16')
                path(d='M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2.5 1a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-2zm0 3a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 2a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1zm3 0a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1zm3 0a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1zm3 0a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1z')
              |                                 Payment details
          // /.Availability-content
        // /.col-md-12
        table
          tr
            th Payment type
            th Payment number
            th Price
            th House Owner
            th Owner Contact 
            th Receipt
          tr.lower-table
            td= mybooking.paymentMethod
            td= user.phone
            td= mybooking.amount
            td= owner.name
            td= owner.phone
            td
             a(href="#")  Download Receipt
      // /.col-md-12
    // /.row
    br
    .row
      .col-md-12
        #rules.house-rules
          table
            tr
              th
                svg.bi.bi-pencil-square(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                  path(d='M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z')
                  path(fill-rule='evenodd' d='M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z')
                |  House Rules
            tr
              td
                ol.rules
                - let rules = house.terms_and_condition.split(".")
                 each rule of rules
                  li
                   = rule    
          table
            tr
              th
                svg.bi.bi-pencil-square(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                  path(d='M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z')
                  path(fill-rule='evenodd' d='M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z')
                |  Description
            tr
              td
                ol.rules
                  li
                   = house.description


          div(style='text-align: center;')
            img(src='img/qrcode.png' alt='' srcset='')
      .col-md-12(style='text-align: center; margin: 10px;')
        - let mapUrl = `https://www.google.com/maps/@${house.locationID.coordinates[0]},${house.locationID.coordinates[1]},12z`
        a.button.default-template-gradient.button-radius(href=`${mapUrl}` target="_blank") Get navigation location
 else 
  h4(style='font-family:Popping, sans-serif ;text-align:center')
       svg.bi.bi-house-fill(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
         path(fill-rule='evenodd' d='m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z')
         path(fill-rule='evenodd' d='M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z')
       | You have No Bookings
       a(style='margin-top:10px' href='/' ).button.default-template-gradient.button-radius Book A House Now
 footer.footer-area.bg-gray-color(style='background-image: url(assets/images/footer-bg.png)')
