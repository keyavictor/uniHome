  .apartments-area.bg-gray-color
   .container
    .row
      .col-md-12
        .heading-content-one.border
          h5.sub-title.default-text-gradient
            | Available houses for you
        // /.Apartments-heading-content
      // /.col-md-12
    // /.row
    .row#mainHouseContainer
      // start of item
    each house in houses 
     - let notBookedHouse = !house.isBooked
     if notBookedHouse  
      .col-md-3.col-sm-6.col-xs-6.mainHouseItem
        .apartments-content
          .image-content
            a(href=`details/${house._id}`)
              img(src=`/img/houses/${house.pictures[0]}` alt=`${house.houseName}`)
          // /.image-content
          .text-content
            .top-content(style='padding:0px 20px')
              h3
                a(href=`details/${house._id}`)= house.houseName
              span
                i.fa.fa-map-marker
                - let name = `${house.locationID.locationName} , ${house.estateId.estateName}`;
                p(style='margin-bottom:0')= name
            // /.top-content
            .bottom-content.clearfix
              .meta-bed-room
                i.fa.fa-bed
                |  2 Beds
                house.numberOfBeds
              .meta-bath-room
                i.fa.fa-bath
                - let shower = house.bathShower ? 'has' : 'no';
                - let hasShower = `${shower} shower`;
                = hasShower 
              .meta-bed-room
                i.glyphicon.glyphicon-home
                - let tiles = house.tiledFloor ? 'has' : 'no';
                - let hasTiles = `${tiles} Tiles`;
                = hasTiles
              .meta-bath-room
                i.fa.fa-power-off
                - let tokens = house.powerAndWaterBill ? 'Tokens' : 'no Tokens';
                = tokens           
              span.clearfix
              - let houseprice = `KSH ${house.price}`
              .rent-price.pull-left= houseprice
              .share-meta.dropup.pull-right
                ul
                  li.dropup
                    a.dropdown-toggle(href='#' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                      i.fa.fa-share-alt
                    ul.dropdown-menu
                      li
                        a(href='#')
                          i.fa.fa-facebook
                      li
                        a(href='#')
                          i.fa.fa-twitter
                      li
                        a(href='#')
                          i.fa.fa-instagram
                      li
                        a(href='#')
                          i.fa.fa-google-plus
                  li
                    a(href='#')
                      i.fa.fa-star-o
            // /.bottom-content
          // /.text-content
        // /.partments-content
