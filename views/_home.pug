        .gallery-slider.owl-carousel.owl-theme
         each addhouse in houses
          - let houseIsPremium = addhouse.premiumHouse==true && addhouse.isBooked == false ? true:false
          - if(houseIsPremium)
           .item
            a(href=`details/${addhouse._id}`) 
             div
              .add-image-details.add-details
                h3(style='color: white')= addhouse.houseName
                .item-location-details
                  svg.home-svg(xmlns='http://www.w3.org/2000/svg' width='20' height='20' fill='white' viewbox='0 0 16 16')
                    path(d='M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z')
                  p.item-estate= addhouse.estateId.estateName
                  p.item-loc= addhouse.locationID.locationName
                  - let addprice = `KSH ${addhouse.price}`
                  h3(style='color: #7ed56f')= addprice
