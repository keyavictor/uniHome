main
  // Register form
  .error-container
   .err-display 
  #form_container.register_form_container.hidden-away
    
    .row
      .col-lg-5
        #left_form
          a(href='home.html')
            img(src='img/logo.png' alt='Unihome ')
          h2 Registration
          p
            | Create a free Unihome account to access premium houses around
            | Maseno.
          p
            a#to-login-form(style='color: white' href='#') OR Login
      .col-lg-7
        #wizard_container
          #top-wizard
            #progressbar
          // /top-wizard
          form#wrapped.register_form(method='POST')
            input#website(name='website' type='text' value='')
            // Leave for security protection, read docs for details
            #middle-wizard
              .step
                h3.main_question
                  strong 1/3
                  | Please fill your Personal Details
                .row
                  .col-md-6
                    .form-group
                      input.form-control.required(type='text' id='fullname' placeholder='Full name')
                // /row
                .row
                  .col-md-6
                    .form-group
                      input.form-control.required(type='email' id='RegistrationEmail' placeholder='Your Email')
                  .col-md-6
                    .form-group
                      input.form-control(type='text' id='regphone' placeholder='Phone number')
                // /row
                .row
                  .col-md-6
                    .form-group
                      input.form-control(type='number' id='id_no' placeholder='ID NO')
                // /row
              // /step
              .step
                h3.main_question
                  strong 2/3
                  | Please fill your School details
                .row
                  .col-md-12
                    .form-group
                      input.form-control(type='text' id='regNo' placeholder='(Optional) Admission number')
                  // /col-sm-12
                // /row
                .row
                  .col-md-6
                    .form-group
                      .styled-select
                        select.required(name='country' id='schoolYear')
                          option(value='' selected='') Year of study
                          option(value='1') 1
                          option(value='2') 2
                          option(value='3') 3
                          option(value='4') 4
                // /row
              // /step
              .submit.step
                h3.main_question
                  strong 3/3
                  | Set a strong password
                // /row
                .row
                  .col-md-6
                    .form-group
                      input.form-control.required(type='password' id='regpassword' placeholder='Password')
                .row
                  .col-md-6
                    .form-group
                      input.form-control.required(type='password' id='regpasswordConfirm' placeholder='Confirm Password')
                .row
                  .col-md-12
                    p(style='color: #777')
                      p(id='email-text') A Verification Email Will Be Sent To You.
              // /step
            // /middle-wizard
            #bottom-wizard
              button.backward(type='button' name='backward' style='margin-right:10px')
                | Back
              button.forward(type='button' name='forward')
                | Next
              button#register_btn_main.submit(type='submit' name='process')
                | Register
            // /bottom-wizard
        // /Wizard container
    // /Row
  // end of Register form
  #form_container.login_form_container
    .row
      .col-lg-5
        #left_form
          a(href='home.html')
            img(src='img/logo.png' alt='Unihome ')
          h2 Login
          p Login and get access to 540 houses
          p
            a#to-register(href='#' style='color: white') Create an Account
      .col-lg-7
        #wizard_container
          #top-wizard
            #progressbar
          // /top-wizard
          form#wrapped.login-form(name='login-form' method='POST')
            input#website(name='website' type='text' value='')
            // Leave for security protection, read docs for details
            #middle-wizard
              .step
                h3.main_question(style='color: #777')
                  strong
                  | Enter your Unihome Credentials
                .row
                  .col-md-6
                    .form-group
                      input.form-control.required(type='email' id='loginEmail' placeholder='Email' required)
                // /row
                .row
                  .col-md-6
                    .form-group(style='display:flex')
                      input.form-control.required(type='password' id='loginPassword' pattern=".{8,}"  title="8 characters minimum" placeholder='Passsword' required)
                      a#hide_password_icon(href="#") 
                       svg.bi.bi-eye-slash-fill(xmlns='http://www.w3.org/2000/svg' width='21' height='21' fill='currentColor' viewbox='0 0 16 16')
                        path(d='m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7.029 7.029 0 0 0 2.79-.588zM5.21 3.088A7.028 7.028 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474L5.21 3.089z')
                        path(d='M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829l-2.83-2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12-.708.708z')

                .row
                  .col-md-6
                    input#login_btn_main.btns--green(type='submit' value='Login')
                br
                // /row
                // /row
