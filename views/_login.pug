    .modal-content
      .modal-header
        h4#more-infoLabel.modal-title Password reset link
        button.close(type='button' data-dismiss='modal' aria-hidden='true')
          | &times;
      .modal-body
        form.reset_pass_form(action='')
          .step
            h3.main_question
              strong
              | Enter your Email
            .row
              .col-md-12
                .form-group
                  input.form-control.resetPasswordEmail.required(type='email' name='firstname' required placeholder='Email')
                p A reset link will be sent to your email
            // /row
          input.btns(type='submit' value='Reset')
      .modal-footer
